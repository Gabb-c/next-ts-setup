{
  "src/**/*.{js,ts,tsx}": [
    "eslint src --ext js,ts,tsx --fix --ignore-path .prettierignore",
    "prettier 'src/**/*.[jt]s?(x)' --write",
    "git add ."
  ],
  "**/*.{md,mdx,json}": ["prettier '**/*.{md,mdx,json}' --write", "git add ."],
  "src/**/*.{scss,css}": ["yarn stylelint src/**/*.{scss,css} --fix", "git add ."]
}
